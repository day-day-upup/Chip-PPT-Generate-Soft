
    <UserControl x:Class="ChipManualGenerationSogt.LeftSider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChipManualGenerationSogt"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="50">
    <UserControl.DataContext>
        <local:LeftSierModel />
    </UserControl.DataContext>
    <Border Background="#D9D9D9">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Border  Background="#D9D9D9">
            <StackPanel >
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0,0,0,10"/>
                    <Setter Property="Width" Value="25"/>
                    <Setter Property="Height" Value="25"/>
                    <Setter Property="Background" Value="#87888C"/>
                    </Style>
            </StackPanel.Resources>

                <Border Height="10"/>
                <Label x:Name="userLabel" Content="{Binding UserName}" HorizontalAlignment="Center" FontSize="16"/>

                <Border Height="20">
                    
             </Border>
                <Button Height="40" Width="40" Background="Transparent" Click="Btn_Home_Clicked">
                    <Image Source="../resources/pic/home.png"  Width="25" Height="25" Stretch="Uniform"/>
                
            </Button>
                <Button Height="40" Width="40" Background="Transparent" Click="Btn_Operation_Clicked">
                    <Image Source="../resources/pic/operation.png"  Width="25" Height="25"  Stretch="Uniform"/>
            </Button>
                <Button Height="40" Width="40" Background="Transparent" Click="Btn_Log_Clicked" >
                    <Image Source="../resources/pic/log.png"  Width="25" Height="25" Stretch="Uniform" />
                </Button>

                    <Button Height="40" Width="40" Background="Transparent" Click="Btn_Add_Clicked" >
                        <Image Source="../resources/pic/Add.png"  Width="25" Height="25" Stretch="Uniform" />
                    </Button>
                </StackPanel>
            
            
        </Border>

            <Label Grid.Row="1"  Content="{Binding Version}"/>
        </Grid>
    </Border>
</UserControl>

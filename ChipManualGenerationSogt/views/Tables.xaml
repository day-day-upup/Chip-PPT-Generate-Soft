<UserControl x:Class="ChipManualGenerationSogt.Tables"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChipManualGenerationSogt"
             xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:CurvesModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <DataTemplate x:Key="ShowMinTemplate" >
            <CheckBox IsChecked="{Binding IsMinVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  HorizontalAlignment="Center" />
        </DataTemplate>
        <DataTemplate x:Key="ShowMaxTemplate">
            <CheckBox IsChecked="{Binding IsMaxVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  HorizontalAlignment="Center" />
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!---->
        <Grid Margin ="5 0 5 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
               
            </Grid.ColumnDefinitions>



            <ListBox SelectionMode="Single"  SelectionChanged="ListBox_SelectionChanged">
                <ListBoxItem  Content="Basic Table" />
                <ListBoxItem  Content="Feature Table" />
                <ListBoxItem  Content="Paramtets Table"  />
                <ListBoxItem  Content="Absolute Maximum Ratings" />
                <ListBoxItem  Content="Typical Supply Current vs. VD,VG" />
                <ListBoxItem  Content="Notes" />
                <ListBoxItem  Content="Description1"/>
                <ListBoxItem  Content="Description2"/>
                <ListBoxItem  Content="Turn ON procedure"/>
                <ListBoxItem  Content="Turn OFF procedure"/>
            </ListBox>


            <Grid Grid.Column="1">



                <DataGrid x:Name="parametersDataGrid" Visibility="Collapsed"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding ParameterRows}" 
                          CanUserSortColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Group" Click="AddGroup_Click" />
                            <MenuItem Header="Delete Group" Click="RemoveGroup_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>

                <DataGrid x:Name="basicDataGrid" Visibility="Visible"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding BasicParameterRows}" 
                          CanUserSortColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Row Above" Click="InsertRowAbove_Click" />
                            <MenuItem Header="Add Row Below" Click="InsertRowBelow_Click" />
                            <MenuItem Header="Delete Row" Click="DeleteRow_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>

                <DataGrid x:Name="featureDataGrid" Visibility="Collapsed"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding FeatureParameterRows}" 
                          CanUserSortColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Row Above" Click="InsertRowAbove_Click" />
                            <MenuItem Header="Add Row Below" Click="InsertRowBelow_Click" />
                            <MenuItem Header="Delete Row" Click="DeleteRow_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>

                <DataGrid    x:Name="absoluteRatingsDataGrid" Visibility="Collapsed"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding AbsoluteRatingsRows}" 
                          CanUserSortColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Row Above" Click="InsertRowAbove_Click" />
                            <MenuItem Header="Add Row Below" Click="InsertRowBelow_Click" />
                            <MenuItem Header="Delete Row" Click="DeleteRow_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>


                <DataGrid x:Name="supplyCurrentDataGrid" Visibility="Collapsed"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding CurrentVdVgTable}" 
                          CanUserSortColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Row Above" Click="InsertRowAbove_Click" />
                            <MenuItem Header="Add Row Below" Click="InsertRowBelow_Click" />
                            <MenuItem Header="Delete Row" Click="DeleteRow_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>


                <DataGrid x:Name="notesDataGrid" Visibility="Collapsed"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding NotesTable}" 
                          CanUserSortColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Row Above" Click="InsertRowAbove_Click" />
                            <MenuItem Header="Add Row Below" Click="InsertRowBelow_Click" />
                            <MenuItem Header="Delete Row" Click="DeleteRow_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>

                <!-- Description1 Table -->
                <DataGrid x:Name="description1DataGrid" Visibility="Collapsed"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding Description1Rows}" 
                          CanUserSortColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Row Above" Click="InsertRowAbove_Click" />
                            <MenuItem Header="Add Row Below" Click="InsertRowBelow_Click" />
                            <MenuItem Header="Delete Row" Click="DeleteRow_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>


                <!-- Description2 Table -->
                <DataGrid x:Name="description2DataGrid" Visibility="Collapsed"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding Description2Rows}" 
                          CanUserSortColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Row Above" Click="InsertRowAbove_Click" />
                            <MenuItem Header="Add Row Below" Click="InsertRowBelow_Click" />
                            <MenuItem Header="Delete Row" Click="DeleteRow_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>

                <!-- Turn ON Procedure Table -->
                <DataGrid x:Name="turnOnDataGrid" Visibility="Collapsed"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding TurnOnRows}" 
                          CanUserSortColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Row Above" Click="InsertRowAbove_Click" />
                            <MenuItem Header="Add Row Below" Click="InsertRowBelow_Click" />
                            <MenuItem Header="Delete Row" Click="DeleteRow_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>

                <!-- Turn OFF Procedure Table -->
                <DataGrid x:Name="turnOffDataGrid" Visibility="Collapsed"
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding TurnOffRows}" 
                          CanUserSortColumns="False"
                          CanUserAddRows="False"
                          Margin="5">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Row Above" Click="InsertRowAbove_Click" />
                            <MenuItem Header="Add Row Below" Click="InsertRowBelow_Click" />
                            <MenuItem Header="Delete Row" Click="DeleteRow_Click"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Margin="5 0 5 0">
            
            <ScottPlot:WpfPlot x:Name="WpfPlot1" Visibility="Collapsed"/>

            
            <Grid x:Name="basicTableImage" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/resources/pic/basic.png"/>
                <Label Grid.Column="1" Content="=========>>" VerticalAlignment="Center"/>
                <Image Grid.Column="2" Source="/resources/pic/basic_demo.png"/>
            </Grid>

            <Grid x:Name="featureImage" Visibility="Collapsed">
                <Image Source="/resources/pic/feature.png"/>
            </Grid>

            <Grid x:Name="elTableImage" Visibility="Collapsed">
                <Image Source="/resources/pic/el_table.png"/>
            </Grid>

            <Grid x:Name="absoluteRatingsImage" Visibility="Collapsed">
                <Image Source="/resources/pic/AbsoluteRate.png"/>
            </Grid>

            <Grid x:Name="supplyCurrentImage" Visibility="Collapsed">
                <Image Source="/resources/pic/ts.png"/>
            </Grid>

            <Grid x:Name="notesImage" Visibility="Collapsed">
                <Image Source="/resources/pic/note.png"/>
            </Grid>

            <Grid x:Name="description1Image" Visibility="Collapsed">
                <Image Source="/resources/pic/d1.png"/>
            </Grid>

            <Grid x:Name="description2Image" Visibility="Collapsed">
                <Image Source="/resources/pic/d2.png"/>
            </Grid>

            <Grid x:Name="turnOnImage" Visibility="Collapsed">
                <Image Source="/resources/pic/t1.png"/>
            </Grid>

            <Grid x:Name="turnOffImage" Visibility="Visible">
                <Image Source="/resources/pic/t2.png"/>
            </Grid>
        </Grid>

    </Grid>
</UserControl>

<UserControl x:Class="ChipManualGenerationSogt.LogWin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChipManualGenerationSogt"
             mc:Ignorable="d" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
       


        <Style x:Key="CleanImageButtonStyle" TargetType="{x:Type Button}">

            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        Background="{TemplateBinding Background}" 
                        SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter" 
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      Margin="{TemplateBinding Padding}"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="LightGray"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <local:LogWinModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer  Grid.Column="2"
                VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto"
                    Margin="5">     
         <TextBlock  Text="{Binding LogText}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="16"/>
        </ScrollViewer>
            <Separator   Grid.Column="1" />

        <Border Grid.Column="0" BorderBrush="#d9d9d9" BorderThickness="1" >

            <StackPanel >

                <DockPanel>

                    <Button  Width="40" Click="Btn_Back_Click" Style="{StaticResource CleanImageButtonStyle}">
                        <Image Source="/resources/pic/back.png" Height="16" />
                    </Button>
                    <Border Width="10"/>
                    <Label Content="Log Query Page" FontSize="14"/>

                </DockPanel>

                <Border Height="20"/>

                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="Start DateTime:" Width="120" FontSize="14"/>
                    <xctk:DateTimePicker 
                             Width="200" 
                             Format="Custom" 
                             FormatString="yyyy/MM/dd/ HH:mm:ss"
                             Value="{Binding StartTime}" />
                    <Label Content=" " />
                </DockPanel>


                <!-- End DateTime -->
                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="End DateTime:" Width="120" FontSize="14"/>
                    <xctk:DateTimePicker 
                             Width="200" 
                             Format="Custom" 
                             FormatString="yyyy/MM/dd/ HH:mm:ss"
                             Value="{Binding EndTime}" />
                    <Label Content=" " />
                </DockPanel>


                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="User:" Width="120" FontSize="14"/>
                    <ComboBox Width="200" VerticalContentAlignment="Center" ItemsSource="{Binding UserList}" SelectedItem="{Binding SelectedUser}" />
                    <Label Content=" " />
                </DockPanel>

                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="Task ID:" Width="120" FontSize="14"/>
                    <TextBox Width="200" Text="{Binding TaskId}"  VerticalContentAlignment="Center"  FontSize="14"/>
                    <Label Content=" " />
                </DockPanel>

                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="Task Name:" Width="120" FontSize="14"/>
                    <TextBox Width="200" Text="{Binding TaskName}" VerticalContentAlignment="Center"   FontSize="14"/>
                    <Label Content=" " />
                </DockPanel>

                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="Level:" Width="120" FontSize="14"/>
                    <ComboBox Width="200" VerticalContentAlignment="Center" ItemsSource="{Binding LevelList}" SelectedItem="{Binding Level}" />
                    <Label Content=" "/>
                </DockPanel>
                
                
                
                

                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Button Content="Query" Click="Btn_Query_Clicked" Width="320" Height="30"/>
                </DockPanel>

            </StackPanel>

        </Border>
           
        
  
    </Grid>
</UserControl>

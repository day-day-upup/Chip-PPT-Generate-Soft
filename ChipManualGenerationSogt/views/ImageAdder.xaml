<UserControl x:Class="ChipManualGenerationSogt.ImageAdder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChipManualGenerationSogt"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid Margin ="5 0 5 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>



            <ListBox x:Name="ImageListBox" SelectionMode="Single"  SelectionChanged="ListBox_SelectionChanged">
                <ListBoxItem  Content="Functional Block Diagram" />
                <ListBoxItem  Content="Outline Drawing" />
                <ListBoxItem  Content="Assembly Drawing"  />
                <ListBoxItem  Content="Biasing and Operation" />
                <ListBoxItem  Content="Mounting Bonding Techniques for MMICs" />
                
            </ListBox>
            <Border Grid.Column="1" BorderThickness="1" BorderBrush="DarkGray"   Background="Transparent" >
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Change Image" Click="ChangeImage_Click"/>
                        <MenuItem Header="Resize Image" Click="ResizeImage_Click"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <Image x:Name="TopImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>


            </Border>
            
        </Grid>

        <Image Grid.Row="1" x:Name="BottomImage" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</UserControl>

<UserControl x:Class="ChipManualGenerationSogt.LogWin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChipManualGenerationSogt"
             mc:Ignorable="d" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:LogWinModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="330"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer 
                VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto"
                    Margin="5">     
         <TextBlock  Text="{Binding LogText}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="16"/>
        </ScrollViewer>
            <Separator   Grid.Column="1" />

        <Border Grid.Column="2" BorderBrush="#d9d9d9" BorderThickness="1" >

            <StackPanel >
                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="Start DateTime:" Width="120" FontSize="14"/>
                    <xctk:DateTimePicker 
                             Width="200" 
                             Format="Custom" 
                             FormatString="yyyy/MM/dd/ HH:mm:ss"
                             Value="{Binding StartTime}" />
                    <Label Content=" " />
                </DockPanel>


                <!-- End DateTime -->
                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="End DateTime:" Width="120" FontSize="14"/>
                    <xctk:DateTimePicker 
                             Width="200" 
                             Format="Custom" 
                             FormatString="yyyy/MM/dd/ HH:mm:ss"
                             Value="{Binding EndTime}" />
                    <Label Content=" " />
                </DockPanel>


                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="User:" Width="120" FontSize="14"/>
                    <ComboBox Width="200" VerticalContentAlignment="Center" ItemsSource="{Binding UserList}" SelectedItem="{Binding SelectedUser}" />
                    <Label Content=" " />
                </DockPanel>

                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="Task ID:" Width="120" FontSize="14"/>
                    <TextBox Width="200" Text="{Binding TaskId}"  VerticalContentAlignment="Center"  FontSize="14"/>
                    <Label Content=" " />
                </DockPanel>

                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="Task Name:" Width="120" FontSize="14"/>
                    <TextBox Width="200" Text="{Binding TaskName}" VerticalContentAlignment="Center"   FontSize="14"/>
                    <Label Content=" " />
                </DockPanel>

                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Label Content="Level:" Width="120" FontSize="14"/>
                    <ComboBox Width="200" VerticalContentAlignment="Center" ItemsSource="{Binding LevelList}" SelectedItem="{Binding Level}" />
                    <Label Content=" "/>
                </DockPanel>
                
                
                
                

                <DockPanel HorizontalAlignment="Center" Margin="0 0 0 7">
                    <Button Content="Query" Click="Btn_Query_Clicked" Width="320" Height="30"/>
                </DockPanel>

            </StackPanel>

        </Border>
           
        
  
    </Grid>
</UserControl>
